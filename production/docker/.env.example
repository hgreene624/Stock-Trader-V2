# Alpaca API Credentials
# Get your keys from: https://app.alpaca.markets/paper/dashboard/overview
ALPACA_API_KEY=your_api_key_here
ALPACA_SECRET_KEY=your_secret_key_here

# Trading Mode
# paper = Paper trading (simulated, no real money)
# live = Live trading (REAL MONEY - requires confirmation)
MODE=paper

# Initial Capital (for tracking NAV)
INITIAL_CAPITAL=100000

# Execution Settings
# How often to run the trading cycle (in minutes)
# 240 = 4 hours (recommended for H4 strategies)
# 1440 = 24 hours (daily strategies)
EXECUTION_INTERVAL_MINUTES=240

# Risk Limits
MAX_PER_ASSET_WEIGHT=0.40          # 40% max per position
MAX_LEVERAGE=1.25                   # 1.25x max leverage
MIN_POSITION_VALUE=100              # $100 minimum position size
DRAWDOWN_TRIGGER=0.15               # 15% drawdown = pause trading

# Shutdown Behavior
# true = Close all positions on shutdown
# false = Leave positions open
CLOSE_ON_SHUTDOWN=false

# Logging
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR

# Health Monitoring
ENABLE_ALERTS=false
ALERT_EMAIL=your_email@example.com

# Optional: Webhook for alerts
# WEBHOOK_URL=https://your-webhook-url
